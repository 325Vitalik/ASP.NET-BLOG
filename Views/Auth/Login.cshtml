@model LoginViewModel


<h2 class="text-center mt-4">Authentification page</h2>
<div class="container text-center">


    <div class="cotainer m-3 p-3">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-controller="Auth" asp-action="login" method="post">
                    <div class="form-group row">
                        <label class="col-md-4 col-form-label text-md-right text-left-xs">Username</label>
                        <div class="col-md-6">
                            <input type="text" class="form-control" placeholder="Enter username" asp-for="UserName" required>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-4 col-form-label text-md-right text-left-xs">Password</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" placeholder="Enter password" asp-for="Password" required>
                        </div>
                    </div>

                    <div class="col-md-6 offset-md-3">
                        <button type="submit" class="m-3 btn btn-secondary">Sign In</button>
                    </div>

                </form>
            </div>
        </div>
    </div>


