@model IEnumerable<Post>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var votes = ViewBag.Vote;
}
<h2 class="text-center mt-4">All Posts</h2>
<div>

    @foreach (var post in Model)
    {
        <div class="card m-3">
            <div class="card-admin-panel" onclick="location.href='@Url.Action("Post", "Home", new { id = @post.Id })'">
                <div class="card-header card-header-primary">
                    <div class="d-flex">
                        <div class="mr-auto p-2 text-bold"> @post.Title</div>
                        <div class="p-2 bd-highlight text-secondary text-bold">
                            @if (votes[post.Id] != null)
                            {
                                if (votes[post.Id])
                                {
                                    <a asp-controller="Rating" asp-action="RatingUp" asp-route-id="@post.Id">
                                        <i class="fas fa-angle-double-up mx-2" style="color: mediumseagreen"></i>
                                    </a>
                                    @post.Rating
                                    <a asp-controller="Rating" asp-action="RatingDown" asp-route-id="@post.Id">
                                        <i class="fas fa-angle-double-down mx-2"></i>
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Rating" asp-action="RatingUp" asp-route-id="@post.Id">
                                        <i class="fas fa-angle-double-up mx-2"></i>
                                    </a>
                                    @post.Rating
                                    <a asp-controller="Rating" asp-action="RatingDown" asp-route-id="@post.Id">
                                        <i class="fas fa-angle-double-down mx-2" style="color: lightcoral"></i>
                                    </a>
                                }
                            }
                            else
                            {
                                <a asp-controller="Rating" asp-action="RatingUp" asp-route-id="@post.Id">
                                    <i class="fas fa-angle-double-up mx-2"></i>
                                </a>
                                @post.Rating
                                <a asp-controller="Rating" asp-action="RatingDown" asp-route-id="@post.Id">
                                    <i class="fas fa-angle-double-down mx-2"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    @Html.Raw(post.Body.Substring(0, post.Body.Length > 256 ? 256 : post.Body.Length))
                </div>
            </div>
        </div>
    }
</div>